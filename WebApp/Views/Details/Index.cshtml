@model IEnumerable<WebApp.Models.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Produkter med detaljer</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.ActionLink("Detaljer", "GetDetails", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
